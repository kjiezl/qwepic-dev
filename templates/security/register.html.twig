{% extends 'base.html.twig' %}

{% block title %}QwePic - Sign Up{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <!-- QwePic Logo -->
        <div class="auth-logo">
            <img src="{{ asset('images/logo-light.svg') }}" alt="QwePic Logo" class="logo-img">
        </div>

        <!-- Sign Up Form -->
        <div class="auth-form-container">
            <h1 class="auth-title">Sign Up</h1>

            <div class="welcome-message">
                <p>Join our community and start capturing memories.</p>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-error">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="auth-form">
                <!-- Name Field -->
                <div class="form-group">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" id="name" name="name" class="form-input"
                           required autocomplete="name">
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-input"
                           required autocomplete="email">
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-input"
                           required autocomplete="new-password" minlength="6">
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group">
                    <label for="confirm_password" class="form-label">Confirm Password</label>
                    <input type="password" id="confirm_password" name="confirm_password" class="form-input"
                           required autocomplete="new-password" minlength="6">
                </div>

                <!-- Terms Agreement -->
                <div class="form-group checkbox-group">
                    <label for="agree_terms" class="checkbox-label">
                        <input type="checkbox" id="agree_terms" name="agree_terms" class="form-checkbox" required>
                        <span class="checkmark"></span>
                        I agree to the <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="privacy-link">Privacy Policy</a>
                    </label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="auth-btn primary-btn">
                    Sign Up
                </button>
            </form>

            <!-- Switch to Login -->
            <div class="auth-switch">
                <p>Already a member? <a href="{{ path('app_login') }}" class="switch-link">Log in</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
