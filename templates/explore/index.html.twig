{% extends 'base.html.twig' %}

{% block title %}QwePic - Explore{% endblock %}

{% block body %}
<!-- Explore Header -->
<section class="explore-header">
    <div class="container">
        <h1 class="explore-title">Explore Categories</h1>
        <p class="explore-subtitle">Discover amazing photography from talented creators</p>
    </div>
</section>

<!-- Category Filters -->
<section class="category-filters">
    <div class="container">
        <div class="filter-buttons">
            {% for category in categories %}
            <button class="filter-btn {{ category.active ? 'active' : '' }}"
                    data-category="{{ category.slug }}"
                    type="button">
                {{ category.name }}
            </button>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Photo Grid -->
<section class="explore-grid">
    <div class="container">
        <div class="photo-grid">
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/placeholder-images/explore-1.jpg', alt: 'Mountain Sunrise - Image 1' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (2).jpg',
                username: '@nature_explorer',
                title: 'Mountain Sunrise',
                description: 'Breathtaking sunrise over the mountains.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/placeholder-images/sample-1 (1).jpg', alt: 'A Day to Remember - Image 1' },
                    { src: 'images/placeholder-images/sample-1 (2).jpg', alt: 'A Day to Remember - Image 2' },
                    { src: 'images/placeholder-images/sample-1 (3).jpg', alt: 'A Day to Remember - Image 3' }
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (1).jpg',
                username: '@pipi-cutie',
                title: 'A Day to Remember',
                description: 'Candid moments from a vibrant civil wedding.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/placeholder-images/explore-2 (1).jpg', alt: 'City Lights - Image 1' },
                    { src: 'images/placeholder-images/explore-2 (2).jpg', alt: 'City Lights - Image 2' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (8).jpg',
                username: '@city_photographer',
                title: 'City Lights',
                description: 'Urban night photography.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/placeholder-images/explore-3 (1).jpg', alt: 'Travel Adventure - Image 1' },
                    { src: 'images/placeholder-images/explore-3 (2).jpg', alt: 'Travel Adventure - Image 2' },
                    { src: 'images/placeholder-images/explore-3 (2).jpg', alt: 'Travel Adventure - Image 3' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (6).jpg',
                username: '@travel_bug',
                title: 'Travel Adventure',
                description: 'Adventurous travel photography.'
            } %}
        </div>
    </div>
</section>
{% endblock %}
