<!-- Sidebar Navigation Template -->
<!-- Desktop Sidebar -->
<aside class="hidden lg:fixed lg:block top-0 left-0 w-20 h-screen bg-anti-flash-white border-r border-gray-300 z-50">
    <div class="p-6 h-full">
        <nav class="flex flex-col items-center gap-6">
            <a href="{{ path('app_home') }}" class="relative flex justify-center w-full group p-2 rounded-lg transition-all duration-300" data-tooltip="Home">
                <i class="fas fa-home text-xl {% if app.request.attributes.get('_route') == 'app_home' %}text-vivid-sky-blue{% else %}text-space-cadet{% endif %} transition-all duration-300 group-hover:scale-110"></i>
                <span class="absolute left-full ml-6 top-1/2 -translate-y-1/2 bg-space-cadet text-anti-flash-white px-3 py-2 rounded-lg font-sans font-semibold text-sm whitespace-nowrap opacity-0 invisible transition-all duration-300 group-hover:opacity-100 group-hover:visible group-hover:translate-x-2 z-50">All Photos</span>
            </a>
            
            <a href="{{ path('app_photo_standalone') }}" class="relative flex justify-center w-full group p-2 rounded-lg transition-all duration-300" data-tooltip="Featured Photos">
                <i class="fas fa-star text-xl {% if app.request.attributes.get('_route') == 'app_photo_standalone' or app.request.attributes.get('_route') == 'app_photo_standalone_new' %}text-vivid-sky-blue{% else %}text-space-cadet{% endif %} transition-all duration-300 group-hover:scale-110"></i>
                <span class="absolute left-full ml-6 top-1/2 -translate-y-1/2 bg-space-cadet text-anti-flash-white px-3 py-2 rounded-lg font-sans font-semibold text-sm whitespace-nowrap opacity-0 invisible transition-all duration-300 group-hover:opacity-100 group-hover:visible group-hover:translate-x-2 z-50">Featured Photos</span>
            </a>
            
            <a href="{{ path('app_photo_feed') }}" class="relative flex justify-center w-full group p-2 rounded-lg transition-all duration-300" data-tooltip="Photo Feed">
                <i class="fas fa-stream text-xl {% if app.request.attributes.get('_route') == 'app_photo_feed' %}text-vivid-sky-blue{% else %}text-space-cadet{% endif %} transition-all duration-300 group-hover:scale-110"></i>
                <span class="absolute left-full ml-6 top-1/2 -translate-y-1/2 bg-space-cadet text-anti-flash-white px-3 py-2 rounded-lg font-sans font-semibold text-sm whitespace-nowrap opacity-0 invisible transition-all duration-300 group-hover:opacity-100 group-hover:visible group-hover:translate-x-2 z-50">Photo Feed</span>
            </a>
            
            <a href="{{ path('app_explore') }}" class="relative flex justify-center w-full group p-2 rounded-lg transition-all duration-300" data-tooltip="Explore">
                <i class="fas fa-compass text-xl {% if app.request.attributes.get('_route') == 'app_explore' %}text-vivid-sky-blue{% else %}text-space-cadet{% endif %} transition-all duration-300 group-hover:scale-110"></i>
                <span class="absolute left-full ml-6 top-1/2 -translate-y-1/2 bg-space-cadet text-anti-flash-white px-3 py-2 rounded-lg font-sans font-semibold text-sm whitespace-nowrap opacity-0 invisible transition-all duration-300 group-hover:opacity-100 group-hover:visible group-hover:translate-x-2 z-50">Explore</span>
            </a>
            
            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <div class="border-t border-gray-300 w-full my-4"></div>
            <a href="{{ path('admin_dashboard') }}" class="relative flex justify-center w-full group p-2 rounded-lg transition-all duration-300" data-tooltip="Admin Panel">
                <i class="fas fa-cog text-xl {% if app.request.attributes.get('_route') starts with 'admin_' %}text-accent-coral{% else %}text-space-cadet{% endif %} transition-all duration-300 group-hover:scale-110"></i>
                <span class="absolute left-full ml-6 top-1/2 -translate-y-1/2 bg-accent-coral text-white px-3 py-2 rounded-lg font-sans font-semibold text-sm whitespace-nowrap opacity-0 invisible transition-all duration-300 group-hover:opacity-100 group-hover:visible group-hover:translate-x-2 z-50">Admin Panel</span>
            </a>
            {% endif %}
        </nav>
    </div>
</aside>

<!-- Mobile Sidebar -->
<aside id="mobile-sidebar" class="lg:hidden fixed top-0 left-0 w-64 h-screen bg-white border-r border-gray-300 z-50 transform -translate-x-full transition-transform duration-300 ease-in-out">
    <div class="p-6 h-full">
        <!-- Mobile Logo -->
        <div class="flex items-center justify-between mb-8">
            <a href="{{ path('app_home') }}" class="flex items-center gap-2">
                <img src="{{ asset('images/logo-plain.svg') }}" alt="QwePic Logo" class="w-auto h-8">
            </a>
            <button onclick="toggleMobileMenu()" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-space-cadet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Mobile Navigation -->
        <nav class="flex flex-col gap-4">
            <a href="{{ path('app_home') }}" class="flex items-center gap-3 p-3 rounded-lg transition-all duration-300 {% if app.request.attributes.get('_route') == 'app_home' %}bg-vivid-sky-blue text-space-cadet{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                <i class="fas fa-home text-xl"></i>
                <span class="font-medium">All Photos</span>
            </a>
            
            <a href="{{ path('app_photo_standalone') }}" class="flex items-center gap-3 p-3 rounded-lg transition-all duration-300 {% if app.request.attributes.get('_route') == 'app_photo_standalone' or app.request.attributes.get('_route') == 'app_photo_standalone_new' %}bg-vivid-sky-blue text-space-cadet{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                <i class="fas fa-star text-xl"></i>
                <span class="font-medium">Featured Photos</span>
            </a>
            
            <a href="{{ path('app_photo_feed') }}" class="flex items-center gap-3 p-3 rounded-lg transition-all duration-300 {% if app.request.attributes.get('_route') == 'app_photo_feed' %}bg-vivid-sky-blue text-space-cadet{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                <i class="fas fa-stream text-xl"></i>
                <span class="font-medium">Photo Feed</span>
            </a>
            
            <a href="{{ path('app_explore') }}" class="flex items-center gap-3 p-3 rounded-lg transition-all duration-300 {% if app.request.attributes.get('_route') == 'app_explore' %}bg-vivid-sky-blue text-space-cadet{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                <i class="fas fa-compass text-xl"></i>
                <span class="font-medium">Explore</span>
            </a>
            
            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <div class="border-t border-gray-300 my-4"></div>
            <a href="{{ path('admin_dashboard') }}" class="flex items-center gap-3 p-3 rounded-lg transition-all duration-300 {% if app.request.attributes.get('_route') starts with 'admin_' %}bg-accent-coral text-white{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                <i class="fas fa-cog text-xl"></i>
                <span class="font-medium">Admin Panel</span>
            </a>
            {% endif %}
            
            {% if app.user %}
            <div class="border-t border-gray-300 my-4"></div>
            
            <!-- User Profile Section -->
            <div class="p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center gap-3 mb-3">
                    {% if app.user.avatar %}
                        <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                    {% else %}
                        <div class="w-10 h-10 bg-slate-gray rounded-full flex items-center justify-center">
                            <span class="text-white font-semibold">{{ app.user.email|first|upper }}</span>
                        </div>
                    {% endif %}
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-space-cadet truncate">{{ app.user.email }}</p>
                        <p class="text-xs text-slate-gray">Photographer</p>
                    </div>
                </div>
                
                <div class="space-y-2">
                    <a href="{{ path('photographer_profile', {'id': app.user.id}) }}" class="flex items-center gap-2 text-sm text-slate-gray hover:text-space-cadet transition-colors">
                        <i class="fas fa-user w-4"></i>
                        <span>My Profile</span>
                    </a>
                    <a href="{{ path('app_album_index') }}" class="flex items-center gap-2 text-sm text-slate-gray hover:text-space-cadet transition-colors">
                        <i class="fas fa-images w-4"></i>
                        <span>My Albums</span>
                    </a>
                    <a href="{{ path('app_photo_new') }}" class="flex items-center gap-2 text-sm text-slate-gray hover:text-space-cadet transition-colors">
                        <i class="fas fa-plus w-4"></i>
                        <span>Upload Photo</span>
                    </a>
                </div>
            </div>
            
            <a href="{{ path('app_logout') }}" class="flex items-center gap-3 p-3 rounded-lg text-red-600 hover:bg-red-50 transition-all duration-300">
                <i class="fas fa-sign-out-alt text-xl"></i>
                <span class="font-medium">Logout</span>
            </a>
            {% else %}
            <div class="border-t border-gray-300 my-4"></div>
            <a href="{{ path('app_login') }}" class="flex items-center gap-3 p-3 rounded-lg bg-vivid-sky-blue text-space-cadet font-medium transition-all duration-300 hover:bg-blue-400">
                <i class="fas fa-sign-in-alt text-xl"></i>
                <span>Login</span>
            </a>
            <a href="{{ path('app_register') }}" class="flex items-center gap-3 p-3 rounded-lg border border-vivid-sky-blue text-vivid-sky-blue font-medium transition-all duration-300 hover:bg-vivid-sky-blue hover:text-space-cadet">
                <i class="fas fa-user-plus text-xl"></i>
                <span>Sign Up</span>
            </a>
            {% endif %}
        </nav>
    </div>
</aside>