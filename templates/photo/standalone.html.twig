{% extends 'base.html.twig' %}

{% block title %}Featured Photos - QwePic{% endblock %}

{% block body %}
<!-- Header Section -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-16 text-center border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-8">
        <h1 class="font-poppins font-bold text-5xl text-space-cadet mb-4 tracking-tight">Featured Photos</h1>
        <p class="font-inter text-xl text-slate-gray max-w-2xl mx-auto mb-8">Standalone masterpieces from our photographers</p>
        
        <!-- Navigation Tabs -->
        {# <div class="flex flex-wrap gap-4 justify-center items-center mb-8">
            <a href="{{ path('app_home') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white">
                All Photos
            </a>
            <a href="{{ path('app_photo_standalone') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg bg-accent-coral border-accent-coral text-white">
                Featured Photos
            </a>
            <a href="{{ path('app_photo_feed') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white">
                Photo Feed
            </a>
        </div> #}

        {% if app.user %}
        <div class="mt-6 mb-6">
            <a href="{{ path('app_photo_standalone_new') }}" 
               class="inline-flex items-center px-6 py-3 bg-vivid-sky-blue text-space-cadet font-semibold rounded-full hover:text-white transition-all duration-300 hover:shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Upload Featured Photo
            </a>
        </div>
        {% endif %}
    </div>
</section>

<!-- Photo Grid -->
<section class="py-12 bg-gray-50 min-h-[60vh]">
    <div class="max-w-7xl mx-auto px-8">
        {% if photos %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 justify-items-center items-start" data-controller="scroll-animation">
                {% for photo in photos %}
                <div class="bg-white rounded-lg overflow-hidden shadow-card transition-all duration-300 opacity-0 translate-y-5 cursor-pointer hover:shadow-xl hover:-translate-y-[2px] w-full max-w-sm" data-scroll-animation-target="item">
                    <div class="relative w-full h-64 overflow-hidden rounded-t-lg group">
                        <a href="{{ path('app_photo_show', {'id': photo.id}) }}">
                            {% if photo.thumbnails and photo.thumbnails.medium %}
                                <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnails.medium) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105">
                            {% else %}
                                <img src="{{ asset('uploads/photos/' ~ photo.src) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105">
                            {% endif %}
                        </a>
                        
                        <!-- Featured Badge -->
                        <div class="absolute top-2 left-2">
                            <span class="bg-accent-coral text-white text-xs font-semibold px-2 py-1 rounded-full">Featured</span>
                        </div>
                        
                        <!-- Action buttons for photo owner -->
                        {% if app.user and photo.photographer == app.user %}
                        <div class="absolute top-2 right-2 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <a href="{{ path('app_photo_edit', {'id': photo.id}) }}" 
                               class="bg-white bg-opacity-90 hover:bg-opacity-100 rounded-full p-2 transition-all duration-300"
                               title="Edit Photo">
                                <svg class="w-4 h-4 text-slate-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="flex items-center p-4">
                        {% if photo.photographer.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ photo.photographer.avatar) }}" 
                                 alt="Photographer profile picture" 
                                 class="w-8 h-8 object-cover rounded-full mr-3">
                        {% else %}
                            <div class="w-8 h-8 bg-slate-gray rounded-full flex items-center justify-center mr-3">
                                <span class="text-white text-sm font-semibold">{{ photo.photographer.email|first|upper }}</span>
                            </div>
                        {% endif %}
                        <span class="font-sans font-semibold text-sm text-slate-gray">{{ photo.photographer.email }}</span>
                    </div>
                    
                    <div class="px-4 pb-4">
                        <h3 class="font-heading font-bold text-lg text-space-cadet mb-2">{{ photo.title }}</h3>
                        {% if photo.description %}
                            <p class="font-sans text-sm text-space-cadet line-clamp-2">{{ photo.description }}</p>
                        {% endif %}
                        <p class="text-xs text-slate-gray mt-2">{{ photo.createdAt|date('M j, Y') }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-16">
                <div class="max-w-md mx-auto">
                    <svg class="w-16 h-16 mx-auto text-slate-gray mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <h3 class="text-xl font-semibold text-space-cadet mb-2">No featured photos yet</h3>
                    <p class="text-slate-gray mb-6">Be the first to share your featured photography!</p>
                    {% if app.user %}
                        <a href="{{ path('app_photo_standalone_new') }}" 
                           class="inline-flex items-center px-6 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                            Upload Featured Photo
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
