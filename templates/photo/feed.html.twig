<!-- Photo Feed -->
<section class="py-12 bg-gray-50 min-h-[60vh]">
    <div class="max-w-4xl mx-auto px-8">
        {% if photos %}
            <div class="space-y-8">
                {% for photo in photos %}
                <article class="bg-white rounded-2xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-xl">
                    <!-- Photographer Header -->
                    <div class="flex items-center p-6 pb-4">
                        {% if photo.photographer.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ photo.photographer.avatar) }}" 
                                 alt="Photographer" 
                                 class="w-10 h-10 object-cover rounded-full mr-4">
                        {% else %}
                            <div class="w-10 h-10 bg-slate-gray rounded-full flex items-center justify-center mr-4">
                                <span class="text-white font-semibold">{{ photo.photographer.email|first|upper }}</span>
                            </div>
                        {% endif %}
                        <div class="flex-grow">
                            <a href="{{ path('photographer_profile', {'id': photo.photographer.id}) }}"
                               class="font-semibold text-space-cadet hover:text-accent-coral transition-colors">
                                {{ photo.photographer.email }}
                            </a>
                            <p class="text-sm text-slate-gray">{{ photo.createdAt|date('M j, Y \\a\\t g:i A') }}</p>
                        </div>
                        {% if photo.album %}
                            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">{{ photo.album.title }}</span>
                        {% endif %}
                    </div>

                    <!-- Photo -->
                    <div class="relative">
                        <a href="{{ path('app_photo_show', {'id': photo.id}) }}">
                            {% if photo.thumbnails and photo.thumbnails.large %}
                                <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnails.large) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto max-h-96 object-cover">
                            {% else %}
                                <img src="{{ asset('uploads/photos/' ~ photo.src) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto max-h-96 object-cover">
                            {% endif %}
                        </a>
                    </div>

                    <!-- Photo Info -->
                    <div class="p-6 pt-4">
                        <h2 class="text-xl font-bold text-space-cadet mb-2">{{ photo.title }}</h2>
                        {% if photo.description %}
                            <p class="text-slate-gray mb-4 leading-relaxed">{{ photo.description }}</p>
                        {% endif %}

                        {% if photo.tags and photo.tags|length > 0 %}
                        <div class="flex flex-wrap gap-2">
                            {% for tag in photo.tags %}
                                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">#{{ tag }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </article>
                {% endfor %}
            </div>

            <!-- Load More Button -->
            {# <div class="text-center mt-12">
                <button class="px-8 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                    Load More Photos
                </button>
            </div> #}
        {% else %}
            <div class="text-center py-16">
                <div class="max-w-md mx-auto">
                    <svg class="w-16 h-16 mx-auto text-slate-gray mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <h3 class="text-xl font-semibold text-space-cadet mb-2">No photos in feed yet</h3>
                    <p class="text-slate-gray mb-6">Be the first to share your photography!</p>
                    {% if app.user %}
                        <a href="{{ path('app_photo_new') }}" 
                           class="inline-flex items-center px-6 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                            Upload Your First Photo
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
