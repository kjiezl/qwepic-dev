{% extends 'base.html.twig' %}

{% block title %}{{ photographer.email }} - Banned User{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-6 flex items-center justify-center">
                {% if photographer.avatar %}
                    <img src="{{ asset('uploads/avatars/' ~ photographer.avatar) }}" 
                         alt="{{ photographer.email }}" 
                         class="w-full h-full rounded-full object-cover opacity-50">
                {% else %}
                    <i class="fas fa-user text-4xl text-gray-400"></i>
                {% endif %}
            </div>
            
            <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ photographer.email }}</h1>
            
            <!-- Banned Status Badge -->
            <div class="inline-flex items-center px-4 py-2 bg-red-100 border border-red-200 rounded-full">
                <i class="fas fa-ban text-red-600 mr-2"></i>
                <span class="text-red-800 font-medium">This account has been banned</span>
            </div>
        </div>

        <!-- Banned Message -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
            <div class="w-16 h-16 bg-red-100 rounded-full mx-auto mb-6 flex items-center justify-center">
                <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
            </div>
            
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Account Suspended</h2>
            
            <p class="text-gray-600 mb-6 max-w-md mx-auto">
                This photographer's account has been suspended due to violations of our community guidelines. 
                Their content is no longer accessible to the public.
            </p>
            
            <div class="flex justify-center gap-4">
                <a href="{{ path('app_home') }}" 
                   class="px-6 py-2 bg-vivid-sky-blue text-space-cadet hover:text-white rounded-full hover:bg-blue-600 transition-colors">
                    <i class="fas fa-home mr-2"></i>Back to Home
                </a>
                
                <a href="{{ path('app_photo_feed') }}" 
                   class="px-6 py-2 bg-gray-500 text-white rounded-full hover:bg-gray-600 transition-colors">
                    <i class="fas fa-images mr-2"></i>Browse Photos
                </a>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-500">
                If you believe this is an error, please 
                <a href="#" class="text-accent-coral hover:underline">contact support</a>.
            </p>
        </div>
    </div>
</div>
{% endblock %}
