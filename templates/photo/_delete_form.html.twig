<form method="post" action="{{ path('app_photo_delete', {'id': photo.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
    <button type="submit" class="flex-1 px-4 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition-all duration-300">
        Delete Photo
    </button>
</form>
