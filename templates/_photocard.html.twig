<div class="bg-white rounded-lg overflow-hidden shadow-lg transition-all duration-300 opacity-0 translate-y-5 cursor-pointer hover:shadow-xl hover:-translate-y-1" data-scroll-animation-target="item">
    <div class="relative w-full h-auto overflow-hidden rounded-t-lg group" data-controller="carousel" data-carousel-target="container">
        <div class="relative w-full h-auto transition-transform duration-300" data-carousel-target="track">
            {% for image in images %}
            <div class="absolute top-0 left-0 w-full h-auto opacity-0 transition-opacity duration-300" data-carousel-target="slide">
                <img src="{{ asset(image.src) }}" alt="{{ image.alt|default(title) }}" class="w-full h-auto">
            </div>
            {% endfor %}
        </div>
        {% if images|length > 1 %}
        <button class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-white bg-opacity-90 border-none rounded-full w-10 h-10 flex items-center justify-center cursor-pointer transition-all duration-300 hover:bg-opacity-100 z-10 opacity-0 group-hover:opacity-100" data-action="click->carousel#prev">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </button>
        <button class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-white bg-opacity-90 border-none rounded-full w-10 h-10 flex items-center justify-center cursor-pointer transition-all duration-300 hover:bg-opacity-100 z-10 opacity-0 group-hover:opacity-100" data-action="click->carousel#next">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </button>
        <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 z-10" data-carousel-target="indicators">
            {% for image in images %}
            <button class="w-3 h-3 rounded-full border-none cursor-pointer transition-all duration-300 carousel-indicator bg-white bg-opacity-50 hover:bg-opacity-75" data-action="click->carousel#goToSlide" data-slide-index="{{ loop.index0 }}"></button>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    <div class="flex items-center p-4">
        <img src="{{ asset(pfp_src) }}" alt="Photographer profile picture" class="w-8 h-8 object-cover rounded-full mr-3">
        <span class="font-inter font-semibold text-sm text-slate-gray">{{ username }}</span>
    </div>
    <div class="px-4 pb-4">
        <h3 class="font-inter font-bold text-lg text-space-cadet mb-2">{{ title }}</h3>
        <p class="font-inter text-sm text-space-cadet">{{ description }}</p>
    </div>
</div>
