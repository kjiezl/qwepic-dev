            </a>
            <a href="{{ path('app_photo_feed') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white">
                Photo Feed
            </a>
        </div> #}
    </div>
</section>

<!-- Photo Gallery -->
<div class="max-w-7xl mx-auto px-8 py-12">
    {% if photos %}
        <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6" data-controller="scroll-animation">
            {% for photo in photos %}
                <!-- Photo Card -->
                <div class="break-inside-avoid mb-6 bg-white rounded-2xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-scroll-animation-target="item">
                    <!-- Photographer Header -->
                    <div class="flex items-center p-4 pb-3">
                        {% if photo.photographer.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ photo.photographer.avatar) }}" 
                                 alt="{{ photo.photographer.email }}" 
                                 class="w-10 h-10 object-cover rounded-full mr-3">
                        {% else %}
                            <div class="w-10 h-10 bg-slate-gray rounded-full flex items-center justify-center mr-3">
                                <span class="text-white text-sm font-semibold">{{ photo.photographer.email|first|upper }}</span>
                            </div>
                        {% endif %}
                        <div class="flex-grow">
                            <a href="{{ path('photographer_profile', {'id': photo.photographer.id}) }}"
                               class="font-semibold text-space-cadet text-sm hover:text-accent-coral transition-colors">
                                {{ photo.photographer.email }}
                            </a>
                            <p class="text-xs text-slate-gray">{{ photo.createdAt|date('M j, Y') }}</p>
                        </div>
                        {% if photo.album %}
                            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">{{ photo.album.title }}</span>
                        {% else %}
                            <span class="text-xs bg-accent-coral text-white px-2 py-1 rounded-full">Featured</span>
                        {% endif %}
                    </div>

                    <!-- Photo -->
                    <div class="relative group">
                        <a href="{{ path('app_photo_show', {'id': photo.id}) }}">
                            {% if photo.thumbnails and photo.thumbnails.large %}
                                <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnails.large) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-[1.02]">
                            {% else %}
                                <img src="{{ asset('uploads/photos/' ~ photo.src) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-[1.02]">
                            {% endif %}
                        </a>
                    </div>

                    <!-- Photo Info -->
                    <div class="p-4 pt-3">
                        <h3 class="font-heading font-bold text-lg text-space-cadet mb-2">{{ photo.title }}</h3>
                        {% if photo.description %}
                            <p class="text-slate-gray text-sm leading-relaxed">{{ photo.description }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Load More Button -->
        {# <div class="text-center mt-12">
            <button class="px-8 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                Load More Photos
            </button>
        </div> #}
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-16">
            <div class="max-w-md mx-auto">
                <svg class="w-16 h-16 mx-auto text-slate-gray mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-space-cadet mb-2">No photos yet</h3>
                <p class="text-slate-gray mb-6">Be the first to share your amazing photography!</p>
                {% if app.user %}
                    <a href="{{ path('app_photo_standalone_new') }}" 
                       class="inline-flex items-center px-6 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                        Upload Your First Photo
                    </a>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}