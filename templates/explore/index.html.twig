{% extends 'base.html.twig' %}

{% block title %}QwePic - Explore{% endblock %}

{% block body %}
<!-- Explore Header -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-12 text-center border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-8">
        <h1 class="font-poppins font-bold text-4xl text-space-cadet mb-4 tracking-tight">Explore Categories</h1>
        <p class="font-inter text-xl text-slate-gray max-w-2xl mx-auto">Discover amazing photography from talented creators</p>
    </div>
</section>

<!-- Category Filters -->
<section class="bg-white py-8 border-b border-gray-200 sticky top-[70px] z-40">
    <div class="max-w-6xl mx-auto px-8">
        <div class="flex flex-wrap gap-4 justify-center items-center">
            {% for category in categories %}
            <button
                class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300  hover:-translate-y-0.5 hover:shadow-lg
                    {{ category.active ? 'bg-accent-coral border-accent-coral text-white hover:bg-red-400 hover:border-red-400 hover:shadow-accent-coral/30' : 'border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white' }}"
                data-category="{{ category.slug }}"
                type="button">
                {{ category.name }}
            </button>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Photo Grid -->
<section class="py-12 bg-gray-50 min-h-[60vh]">
    <div class="max-w-7xl mx-auto px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 justify-items-center items-start" data-controller="scroll-animation">
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/explore-1.jpg', alt: 'Mountain Sunrise - Image 1' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (2).jpg',
                username: '@nature_explorer',
                title: 'Mountain Sunrise',
                description: 'Breathtaking sunrise over the mountains.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/sample-1 (1).jpg', alt: 'A Day to Remember - Image 1' },
                    { src: 'images/sample-1 (2).jpg', alt: 'A Day to Remember - Image 2' },
                    { src: 'images/sample-1 (3).jpg', alt: 'A Day to Remember - Image 3' }
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (1).jpg',
                username: '@pipi-cutie',
                title: 'A Day to Remember',
                description: 'Candid moments from a vibrant civil wedding.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/explore-2 (1).jpg', alt: 'City Lights - Image 1' },
                    { src: 'images/explore-2 (2).jpg', alt: 'City Lights - Image 2' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (8).jpg',
                username: '@city_photographer',
                title: 'City Lights',
                description: 'Urban night photography.'
            } %}
            {% include '_photocard.html.twig' with {
                images: [
                    { src: 'images/explore-3 (1).jpg', alt: 'Travel Adventure - Image 1' },
                    { src: 'images/explore-3 (2).jpg', alt: 'Travel Adventure - Image 2' },
                    { src: 'images/explore-3 (3).jpg', alt: 'Travel Adventure - Image 3' },
                ],
                pfp_src: 'images/placeholder-pfp/sample-pfp (6).jpg',
                username: '@travel_bug',
                title: 'Travel Adventure',
                description: 'Adventurous travel photography.'
            } %}
        </div>
    </div>
</section>
{% endblock %}