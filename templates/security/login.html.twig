{% extends 'base.html.twig' %}

{% block title %}QwePic - Login{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <!-- QwePic Logo -->
        <div class="auth-logo">
            <img src="{{ asset('images/logo-light.svg') }}" alt="QwePic Logo" class="logo-img">
        </div>

        <!-- Login Form -->
        <div class="auth-form-container">
            <h1 class="auth-title">Login</h1>

            {% if error %}
                <div class="alert alert-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="auth-form">
                <!-- Email Field -->
                <div class="form-group">
                    <label for="username" class="form-label">Email</label>
                    <input type="email" id="username" name="email" class="form-input"
                           value="{{ last_username }}" required autocomplete="email" autofocus>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-input"
                           required autocomplete="current-password">
                </div>

                <!-- Remember Me -->
                <div class="form-group checkbox-group">
                    <label for="remember_me" class="checkbox-label">
                        <input type="checkbox" id="remember_me" name="_remember_me" class="form-checkbox">
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                </div>

                <!-- Forgot Password Link -->
                <div class="form-group text-center">
                    <a href="#" class="forgot-password-link">Forgot Password?</a>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="auth-btn primary-btn">
                    Log In
                </button>
            </form>

            <!-- Switch to Register -->
            <div class="auth-switch">
                <p>Don't have an account? <a href="{{ path('app_register') }}" class="switch-link">Sign up here</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
